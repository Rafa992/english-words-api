generator client { 
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb" 
  url = env("DATABASE_URL") 
}

model User {
  id    String @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  email String @unique
  password String
  name String
  laterality String
  version String
  currentRange String  @map("current_range")
  @@map("user")
}

model Words {
  id String  @id @default(cuid()) @map("_id")
  order Int
  en String
  transcription String
  ru String
  ruFull String
  learned Boolean
  unlearned Boolean
  repetitions Int
  @@map("words")
}
